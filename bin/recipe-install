#!/usr/bin/env node

var program = require('commander');

program
    .arguments('<recipe-query>')
    .description('manually install a recipe')
    .action((recipeQuery, options) => {
        var InstallCommand = require('../dist/js/commands/InstallCommand').default;
        InstallCommand.run(options)
            .then((installedRecipe) => {
                console.log('Recipe installed ' + installedRecipe.name + '@' + installedRecipe.version);
                process.exit();
            })
            .catch((error) => {
                console.log('Install failed.');
                console.log(error);
                process.exit(1);
            });
    })
    .parse(process.argv);
